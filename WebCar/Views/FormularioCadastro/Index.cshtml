@{
    Layout = null;
}
@model CadastroModel

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="shortcut icon" href="~/carro-de-brinquedo.ico" />
    <title>Formulário</title>
</head>
<body>
      <div class="container">
        <div class="form-image">
            <img src="/undraw_trip_re_f724.svg" alt="">
        </div>
        <div class="form">
            <form asp-controller="FormularioCadastro" asp-action="Criar" method="post">
                <div class="form-header">                   
                    <div class="title">
                        <h1>Cadastre-se</h1>
                    </div>
                    <div class="login-button">
                        <button><a class="login-button" asp-controller="Home" asp-action="Index" role="button">Entrar</a></button>
                    </div>
                </div>

                <div class="input-group">
                    <div class="input-box">
                        <label for="firstname">Primeiro Nome</label>
                        <input id="firstname" type="text" asp-for="FirstName" name="firstname" placeholder="Digite seu primeiro nome" required>
                        
                    </div>

                    <div class="input-box">
                        <label for="lastname">Sobrenome</label>
                        <input id="lastname" type="text" asp-for="LastName" name="lastname" placeholder="Digite seu sobrenome" required>
                       
                    </div>
                    <div class="input-box">
                        <label for="email">E-mail</label>
                        <input id="email" type="email" asp-for="Email" name="email" placeholder="Digite seu e-mail" required>
                        
                    </div>

                    <div class="input-box">
                        <label for="number">Celular</label>
                        <input id="number" type="tel" asp-for="Celular" name="number" placeholder="(xx) xxxx-xxxx" required>
                        
                    </div>

                    <div class="input-box">
                        <label for="password">Senha</label>
                        <input id="password" type="password" asp-for="Password" name="password" placeholder="Digite sua senha" required>
                       
                    </div>


                    <div class="input-box">
                        <label for="confirmPassword">Confirme sua Senha</label>
                        <input id="confirmPassword" type="password" name="confirmPassword" placeholder="Digite sua senha novamente" required>
                    </div>

                </div>

                <div class="gender-inputs">                  
                    <div class="gender-title">
                        <h6>Gênero</h6>
                    </div>

                    <div class="gender-group">
                        <div class="gender-input">
                            <input id="female" type="radio" asp-for="Gender" name="gender" value="Feminino">
                            <label for="female">Feminino</label>
                        </div>

                        <div class="gender-input">
                            <input id="male" type="radio" asp-for="Gender" name="gender" value="Masculino">
                            <label for="male">Masculino</label>
                        </div>

                        <div class="gender-input">
                            <input id="others" type="radio" asp-for="Gender" name="gender" value="Outros">
                            <label for="others">Outros</label>
                        </div>

                        <div class="gender-input">
                            <input id="none" type="radio" asp-for="Gender" name="gender" value="PrefiroNãoDizer">
                            <label for="none">Prefiro não dizer</label>
                        </div>
                    </div>
                </div>

                <div class="continue-button">
                    <button type="submit">Cadastrar</button>
                </div>
                @if (TempData["MensagemDeSucesso"] != null)
                {
                    <div class="alert alert-primary" role="alert">
                        <button type="button" class="btn-danger btn-sm close-alert" arial-label="close">X</button>
                        @TempData["MensagemDeSucesso"]
                    </div>

                }


                @if (TempData["MensagemErro"] != null)
                {
                    <div class="alert alert-primary" role="alert">
                        <button type="button" class="btn-danger btn-sm close-alert" arial-label="close">X</button>
                        @TempData["MensagemErro"]
                    </div>

                }
            </form>          
        </div>
    </div>
</body>

</html>